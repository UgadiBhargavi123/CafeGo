<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/coffee_cardview"
        android:layout_width="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/coffee_img"
               android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:scaleType="fitXY"
                android:src="@drawable/img1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/coffee_img"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:id="@+id/coffee_name_tv"
                    android:fontFamily="@font/sora"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_tran"
                    android:textFontWeight="600"
                    android:layout_height="wrap_content"
                    android:text="Cappucino"/>
                <TextView
                    android:layout_below="@+id/coffee_name_tv"
                    android:layout_width="match_parent"
                    android:id="@+id/coffee_name_details_tv"
                    android:fontFamily="@font/sora"
                    android:textSize="12sp"
                    android:textColor="@color/ash"
                    android:textFontWeight="400"
                    android:layout_height="wrap_content"
                    android:text="with choclate"/>

                <TextView
                    android:id="@+id/money_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sora"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    android:textColor="@color/dark_blue"
                    android:layout_below="@id/coffee_name_details_tv"
                    android:text="$ 4.53"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addCart"
                    android:layout_width="32dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/orange"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_below="@id/coffee_name_details_tv"
                    android:layout_height="32dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/add"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>