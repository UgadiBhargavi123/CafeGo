<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_above="@id/coffee_tv"
        android:background="@drawable/coffee_img"
        android:layout_height="wrap_content"/>
    <TextView

        android:id="@+id/coffee_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="50dp"
        android:textFontWeight="600"
        android:layout_marginEnd="25dp"
        android:layout_gravity="bottom"
        android:layout_above="@id/prompt_tv"
        android:fontFamily="@font/sora"
        android:gravity="center"
        android:text="Coffee so good, \n your taste buds \n will love it."
        android:textColor="@color/ash"
        android:textSize="34sp" />
    <TextView
        android:id="@+id/prompt_tv"
        android:layout_width="match_parent"
        android:layout_above="@id/get_started_tv"
        android:layout_height="55dp"

        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:textFontWeight="400"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/sora"
        android:gravity="center"
        android:text="The best grain, the finest roast, the powerful flavor."
        android:textColor="@color/ash"
        android:textSize="14sp" />
 <TextView
     android:id="@+id/get_started_tv"
        android:layout_width="match_parent"

        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/orange_round_corners"
        android:fontFamily="@font/sora"
        android:gravity="center"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="16sp" />



</RelativeLayout>